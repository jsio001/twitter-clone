<div id="tweets-index">
  <% @tweets.each do |tweet| %>
    <div class="card">
      <div class="card-body">
        <%= tweet.created_at.strftime("%d %b, %H:%M") %>
        <br>
        <%= tweet.tweet[0,150] %>
        &nbsp
        <%= link_to 'Edit', edit_tweet_path(tweet) %>
        <%= link_to 'Delete', tweet_path(tweet), method: :delete, data: { confirm: 'Sure?' } %>
      </div>
    </div>
    <br>
  <% end %>
</div>
