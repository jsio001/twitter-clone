<h1>Welcome!</h1>

<div class="container-fluid">
  <div class="row align-items-center" style="height: 60%;">
    <div class="col">
      <div class="row">

        <div class="col-sm-5">
          <div class="card">
            <div class="card-body">
              <%= simple_form_for current_user.tweets.build, url: tweets_path(current_user), method: :post do |f| %>
                <%= f.input :tweet, required: false, label: false, placeholder: "What's Happening?" %>
                <br>
                <%= f.button :submit %>
              <% end %>
            </div>
          </div>
          <br>
          <% @tweets.each do |tweet| %>
            <div class="card">
              <div class="card-body">
                <%= tweet.created_at %>
                <%= tweet.tweet %>
                <%= link_to 'Edit', edit_tweet_path(tweet) if tweet.id %>
                <%= link_to 'Delete', tweet_path(tweet), method: :delete, data: { confirm: 'Sure?' } if tweet.id %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-sm-2">
          <div class="row">
            <h3>Own Stats</h3>
            <ul>
              <li><%= current_user.posters.count %> following</li>
              <li><%= current_user.subscribers.count %> followers</li>
            </ul>
          </div>
          <div class="row">
            <h3>Who to follow</h3>
            <% @users = User.all %>
            <ul>
            <% @users.each do |user| %>
              <li><%= user.username %> ID#<%= user.id %>
                <%= link_to "Follow", follow_path(user), method: :post %>
                <%= link_to "UnFollow", unfollow_path(user), method: :delete %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
