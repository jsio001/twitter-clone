<h1>Welcome!</h1>

<div class="container-fluid">
  <div class="row align-items-center" style="height: 60%;">
    <div class="col">
      <div class="row">

        <div class="col-sm-2">
          <h3>Users to follow</h3>
          <% @users = User.all %>
          <% @users.each do |user| %>
            <p><%= user.username %></p>
            <%= link_to(:controller => "application", :action => "relate", :poster_id => user.id) %>
          <% end %>
        </div>

        <div class="col-sm-5">
          <div class="card">
            <div class="card-body">
              <%= simple_form_for current_user.tweets.build, url: tweets_path(current_user), method: :post do |f| %>
                <%= f.input :tweet, required: false, label: false, placeholder: "What's Happening?" %>
                <br>
                <%= f.button :submit %>
              <% end %>
            </div>
          </div>
          <br>
          <div class="card">
            <% current_user.tweets.each do |tweet| %>
              <div class="card-body">
                <%= tweet.tweet %>
                <br>
                <!-- <%= link_to 'Edit Tweet', edit_tweet_path(current_user,tweet) %>
                <%= link_to 'Delete Tweet', tweet_path(current_user,tweet), method: :delete %> -->
              </div>
            <% end %>
          </div>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
