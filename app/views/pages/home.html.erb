<h1>Welcome to Twitter</h1>
<%= link_to 'New Tweet', new_tweet_path, method: :get %>

<h2>All My Tweets</h2>


<table>
  <tbody>
    <% current_user.tweets.each do |tweet| %>
      <tr>
        <th></th>
        <td><%= tweet.tweet %></td>
        <td><%= link_to 'Edit Tweet', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Delete Tweet', tweet_path(tweet), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
